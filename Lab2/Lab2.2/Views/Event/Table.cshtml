@model List<Lab2._2.Models.Event>

@{
    ViewBag.Title = "Table";
}

<div class="row">
    <table class="table table-striped text-center align-items-center border">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Location</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.location</td>
                    <td><a href="@Url.Action("EditEvent", "Event", new {id = item.id})" class="btn btn-primary">Edit</a> <a href="@Url.Action("DeleteEvent", "Event", new {id = item.id})" class="btn btn-primary">Delete</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="@Url.Action("AddEvent", "Event")" class="btn btn-primary">Add</a>
</div>

